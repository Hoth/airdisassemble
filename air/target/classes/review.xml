<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	
	<mapper namespace="review">
	<resultMap type="review" id="ReviewResultMap">
		<result column="r_Num" property="r_Num"/>
		<result column="r_Name" property="r_Name"/>
		<result column="r_Age" property="r_Age"/>
		<result column="r_Location" property="r_Location"/>
		<result column="r_Title" property="r_Title"/>
		<result column="r_Wdate" property="r_Wdate"/>
		<result column="r_Star" property="r_Star"/>
		<result column="r_Gender" property="r_Gender"/>
		<result column="r_Image" property="r_Image"/>
		<result column="r_Context" property="r_Context"/>
		<result column="r_Continent" property="r_Continent"/>
		<result column="r_Season" property="r_Season"/>
	</resultMap>
	
	<select id="selectReviewList" resultMap="ReviewResultMap">
	 <![CDATA[
	  	select * from A_review
	 ]]>
	</select>
	<select id="selectReviewList_Asc" resultMap="ReviewResultMap">
	 <![CDATA[
	  	select * from A_review order by r_Star asc
	 ]]>
	</select>
	<select id="selectReviewList_Desc" resultMap="ReviewResultMap">
	 <![CDATA[
	  	select * from A_review order by r_Star Desc
	 ]]>
	</select>
	<select id="selectReview" resultMap = "ReviewResultMap">
	<![CDATA[
		select * from A_review where r_Num = #{r_Num}
	]]>
	</select>
	
	<insert id="insertReview" parameterType="Review">
	<![CDATA[
		insert into A_review (r_Name,r_Title,r_Gender,r_Age,r_Continent,r_Location,r_Image,r_Context,r_Star,r_Season,r_Wdate)
		values (#{r_Name},#{r_Title},#{r_Gender},#{r_Age},#{r_Continent},#{r_Location},#{r_Image},#{r_Context},#{r_Star},#{r_Season},#{r_Wdate})  
	]]>
	</insert>
	
	<update id="updateReview" parameterType="int">
	<![CDATA[
		 update shop_Good set r_Title=#{r_Title},
		 c_Location=#{c_Location},r_Image=#{r_Image},r_Context=#{r_Context},
		 r_Star=#{r_Star},r_Tdate=#{r_Tdate},r_Wdate=#{r_Wdate}
		 where r_Num=#{r_Num}  
	]]>
	</update>
	
	<delete id="deleteReview" parameterType="int">
	<![CDATA[
		delete from A_review where r_Num=#{r_Num}  
	]]>
	</delete>
	
</mapper>